{
  "name": "test-coverage-agent",
  "description": "A Github Action that runs your test command, uploads the coverage report to Cloudflare and attaches the results to your pull request.",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "license": "MIT",
  "author": "carlosdevpereira",
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "homepage": "https://github.com/carlosdevpereira/test-coverage-agent#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlosdevpereira/test-coverage-agent.git"
  },
  "scripts": {
    "build": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "build:watch": "npm run build -- --watch",
    "test": "npx jest",
    "test:ci": "npx jest --ci",
    "test:ci:coverage": "npx jest --ci --coverage",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml"
  },
  "dependencies": {
    "@actions/core": "^1.11.0",
    "@actions/github": "^6.0.0",
    "@actions/http-client": "^2.2.3",
    "markdown-table": "^3.0.3",
    "shellac": "^0.8.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
